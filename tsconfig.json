{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "bundler",
    "baseUrl": "./src",

    "lib": ["DOM", "esnext", "ES2023"], // ESNext doesn't support ES2023 features like Array.toReversed(), so needed to add it manually

    // everything below is just suggested by https://www.npmjs.com/package/@tsconfig/recommended
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "$schema": "https://json.schemastore.org/tsconfig", // @tsconfig/recommended
  "display": "Recommended" // @tsconfig/recommended
}
